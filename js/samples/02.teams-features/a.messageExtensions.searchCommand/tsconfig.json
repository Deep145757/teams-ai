        "outDir": "./lib",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "target": "ESNEXT",
        "tsBuildInfoFile": "./lib/.tsbuildinfo",
        "esModuleInterop": true
    }
}
